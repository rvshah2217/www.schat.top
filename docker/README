.install docker
....................................................................
[root@www.schat.top:~ ]# apt-get -y update
[root@www.schat.top:~ ]# apt-get -y install linux-image-extra-$(uname -r) linux-image-extra-virtual 
[root@www.schat.top:~ ]# apt-get -y install apt-transport-https ca-certificates curl software-properties-common
[root@www.schat.top:~ ]# curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
[root@www.schat.top:~ ]# apt-key fingerprint 0EBFCD88
[root@www.schat.top:~ ]# add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu  $(lsb_release -cs) stable"
[root@www.schat.top:~ ]# apt-get -y update
[root@www.schat.top:~ ]# apt-get -y install docker-ce  --allow-unauthenticated

[root@www.schat.top:~ ]# docker network create --subnet 172.18.0.0/24 dockernet

